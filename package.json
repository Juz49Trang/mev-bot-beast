{
  "name": "mev-bot-beast",
  "version": "2.0.0",
  "description": "Production-ready MEV bot with multiple strategies",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:contracts": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:base": "hardhat run scripts/deploy.js --network base",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "simulate": "node scripts/simulate.js",
    "backtest": "node scripts/backtest.js",
    "dashboard": "node dashboard/server.js",
    "docker:build": "docker build -t mev-bot:latest .",
    "docker:run": "docker-compose up -d",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@flashbots/ethers-provider-bundle": "^0.6.1",
    "@uniswap/smart-order-router": "^3.13.2",
    "@uniswap/v3-periphery": "^1.4.3",
    "@uniswap/v3-sdk": "^3.9.0",
    "axios": "^1.4.0",
    "bignumber.js": "^9.1.1",
    "bull": "^4.10.4",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "p-queue": "^7.3.4",
    "pg": "^8.10.0",
    "pg-pool": "^3.6.0",
    "redis": "^4.6.5",
    "retry": "^0.13.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/node": "^18.15.11",
    "chai": "^4.3.7",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  }
}
